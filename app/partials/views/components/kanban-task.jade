div.kanban-tagline(tg-colorize-tags="us.tags", tg-colorize-tags-type="kanban")
div.kanban-task-inner(ng-class="{'archived': us.isArchived}")
    div(tg-kanban-user-avatar="us.assigned_to",
                ng-model="us",
                ng-hide="us.isArchived")
    div.task-text
        a.task-assigned(href="", title="Assign User Story", ng-hide="us.isArchived")
        div(ng-show="us.isArchived") You have archived
        span.task-num(tg-bo-ref="us.ref")
        a.task-name(href="", title="See user story detail", ng-bind="us.subject",
                    tg-nav="project-userstories-detail:project=project.slug,ref=us.ref")
        a.task-points(href="", title="Total Us points", ng-hide="us.isArchived")
            span(ng-bind="us.total_points") --
            span points
    a.icon.icon-edit(tg-check-permission="modify_us", href="", title="Edit", ng-hide="us.isArchived")
    a.icon.icon-drag-h(tg-check-permission="modify_us", href="", title="Drag&Drop", ng-hide="us.isArchived")
    span(ng-show="us.isArchived") Drag & drop again to undo
